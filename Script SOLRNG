-- T·∫°o n√∫t b·∫≠t/t·∫Øt ƒë·∫πp
local function createToggleButton(text, position, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.9, 0, 0, 40)
    button.Position = position
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.BackgroundColor3 = Color3.fromRGB(20, 20, 60)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 18
    button.Parent = frame
    
    local state = false
    button.MouseButton1Click:Connect(function()
        state = not state
        if state then
            button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        else
            button.BackgroundColor3 = Color3.fromRGB(20, 20, 60)
        end
        callback(state)
    end)
    return button
end

-- Auto L·ª•m V·∫≠t Ph·∫©m
function AutoPickupItems(state)
    _G.AutoPickup = state
    while _G.AutoPickup do
        wait(0.5)
        for _, item in pairs(game.Workspace:GetChildren()) do
            if item:IsA("Tool") then
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = item.Handle.CFrame
                wait(0.1)
                fireclickdetector(item.Handle:FindFirstChildOfClass("ClickDetector"))
            end
        end
    end
end

createToggleButton("üõ†Ô∏è Auto L·ª•m V·∫≠t Ph·∫©m", UDim2.new(0.05, 0, 0, 100), AutoPickupItems)

-- Auto Parkour
function AutoParkour(state)
    _G.AutoParkour = state
    while _G.AutoParkour do
        wait(0.1)
        game.Players.LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
    end
end

createToggleButton("üèÉ Auto Nh·∫£y Parkour", UDim2.new(0.05, 0, 0, 160), AutoParkour)
